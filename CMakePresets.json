{
  "version": 3,
  "configurePresets": [
    {
      "name": "native",
      "displayName": "Native Build",
      "description": "Build for native platform using MinGW",
      "binaryDir": "${sourceDir}/build",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "emscripten",
      "displayName": "Web Build (Emscripten)",
      "description": "Build for web using Emscripten",
      "binaryDir": "${sourceDir}/build-web",
      "generator": "Unix Makefiles",
      "environment": {
        "EMSCRIPTEN": "1"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "C:/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
      }
    }
  ]
}